<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/police_station_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="甲方:"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@+id/police_station_name_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            ></TextView>

        <TextView
            android:id="@+id/police_station_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/police_station_tag_tv"
            app:layout_constraintRight_toLeftOf="@+id/unit_name_tag_tv"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/police_seal_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintRight_toRightOf="@+id/police_station_name_tv"
            app:layout_constraintBottom_toBottomOf="@+id/police_station_name_tv"
            app:layout_constraintLeft_toLeftOf="@+id/police_station_name_tv"
            app:layout_constraintTop_toTopOf="@+id/police_station_name_tv"></ImageView>

        <ImageView
            android:id="@+id/police_manager_seal_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/police_manager_name_tv"
            app:layout_constraintLeft_toRightOf="@+id/police_manager_name_tv"
            app:layout_constraintTop_toTopOf="@+id/police_manager_name_tv"></ImageView>


        <LinearLayout
            android:id="@+id/sign_ll"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/police_manager_name_tv"
            app:layout_constraintLeft_toLeftOf="@+id/unit_name_tag_tv"
            app:layout_constraintTop_toTopOf="@+id/police_manager_name_tv">

            <TextView
                android:id="@+id/sign_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="单位法人:"
                android:textColor="@color/text_title"
                android:textSize="14dp"></TextView>

            <ImageView
                android:id="@+id/sign_name_iv"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bg_white_only_bottom_gray_shape_1dp"
                android:textSize="14dp"></ImageView>


        </LinearLayout>

        <TextView
            android:id="@+id/police_manager_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="所长:"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/police_station_tag_tv"
            app:layout_constraintTop_toBottomOf="@+id/police_station_tag_tv"></TextView>

        <TextView
            android:id="@+id/unit_name_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="单位名称:"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintRight_toLeftOf="@+id/unit_name_tv"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/unit_name_tv"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>


        <TextView
            android:id="@+id/telephone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:text="联系电话:123123215"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/sign_ll"
            app:layout_constraintTop_toBottomOf="@+id/sign_ll"></TextView>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_title"
            android:textSize="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telephone_tv" />


    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:id="@+id/detail_bottom_bt_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/share_wechat_tv"
            style="@style/bt_style"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="分享微信"></TextView>

        <TextView
            android:id="@+id/download_word_tv"
            style="@style/bt_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="下载Word版"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/commit_form_tv"
        style="@style/bt_style"
        android:text="提交"></TextView>
</LinearLayout>