<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/sign_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="责任人签字："
            android:textColor="@color/text_title"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/seal_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/seal_iv"></TextView>

        <ImageView
            android:id="@+id/sign_name_iv"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_white_only_bottom_gray_shape_1px"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/sign_name_tv"
            app:layout_constraintTop_toTopOf="@+id/sign_name_tv"></ImageView>

        <ImageView
            android:id="@+id/seal_iv"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/sealed_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/text_title"
            android:text="2012年12月45日"
            app:layout_constraintLeft_toLeftOf="@+id/seal_iv"
            app:layout_constraintRight_toRightOf="@+id/seal_iv"
            app:layout_constraintTop_toBottomOf="@+id/seal_iv"></TextView>
    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/share_wechat_tv"
            style="@style/bt_style"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="分享微信"></TextView>

        <TextView
            android:id="@+id/download_word_tv"
            style="@style/bt_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="下载Word版"></TextView>

    </LinearLayout>

</LinearLayout>